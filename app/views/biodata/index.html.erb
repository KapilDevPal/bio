<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4 font-playfair">
      Marriage Biodata Generator
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Create beautiful, professional marriage biodata with dynamic fields and beautiful templates.
    </p>
  </div>

  <!-- Create New Button -->
  <div class="text-center mb-8">
    <%= link_to new_biodatum_path, 
        class: "bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 transform hover:scale-105 shadow-lg inline-flex items-center" do %>
      <i class="fas fa-plus mr-2"></i>
      Create New Biodata
    <% end %>
  </div>

  <!-- Biodata List -->
  <% if @biodata.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @biodata.each do |biodatum| %>
        <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-200">
          <!-- Preview Image -->
          <div class="h-48 bg-gradient-to-br from-pink-100 to-purple-100 flex items-center justify-center">
            <% if biodatum.photo.present? %>
              <img src="<%= biodatum.photo %>" alt="<%= biodatum.name %>" class="w-24 h-24 rounded-full object-cover border-4 border-white shadow-lg">
            <% else %>
              <div class="w-24 h-24 rounded-full bg-pink-200 flex items-center justify-center">
                <i class="fas fa-user text-pink-500 text-3xl"></i>
              </div>
            <% end %>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              <%= biodatum.name %>
            </h3>
            
            <% if biodatum.description.present? %>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                <%= biodatum.description %>
              </p>
            <% end %>
            
            <!-- Stats -->
            <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
              <span>
                <i class="fas fa-layer-group mr-1"></i>
                <%= biodatum.biodata_sections.count %> sections
              </span>
              <span>
                <i class="fas fa-edit mr-1"></i>
                <%= biodatum.biodata_fields.count %> fields
              </span>
            </div>
            
            <!-- Actions -->
            <div class="flex space-x-2">
              <%= link_to preview_biodatum_path(biodatum), 
                  class: "flex-1 bg-purple-500 hover:bg-purple-600 text-white text-center py-2 px-4 rounded text-sm font-medium transition-colors" do %>
                <i class="fas fa-eye mr-1"></i>
                Preview
              <% end %>
              
              <%= link_to biodatum_path(biodatum), 
                  class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white text-center py-2 px-4 rounded text-sm font-medium transition-colors" do %>
                <i class="fas fa-file-alt mr-1"></i>
                View
              <% end %>
              
              <%= link_to edit_biodatum_path(biodatum), 
                  class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white text-center py-2 px-4 rounded text-sm font-medium transition-colors" do %>
                <i class="fas fa-edit mr-1"></i>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <i class="fas fa-file-alt text-gray-400 text-3xl"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No biodata created yet</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first marriage biodata.</p>
      <%= link_to new_biodatum_path, 
          class: "bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors" do %>
        <i class="fas fa-plus mr-2"></i>
        Create First Biodata
      <% end %>
    </div>
  <% end %>
</div>
