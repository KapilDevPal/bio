<div class="minimal-template bg-white p-8 max-w-4xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-16">
    <h1 class="text-3xl font-light text-gray-900 mb-4">Marriage Biodata</h1>
    <div class="w-20 h-px bg-gray-300 mx-auto"></div>
  </div>

  <!-- Content -->
  <div class="space-y-12">
    <% bio.sections.ordered.each do |section| %>
      <div class="section">
        <h2 class="text-lg font-normal text-gray-700 mb-8 uppercase tracking-widest">
          <%= bio.get_localized_label(section.name) %>
        </h2>
        
        <div class="space-y-6">
          <% section.fields.ordered.each do |field| %>
            <% if field.value.present? %>
              <div class="field-item">
                <div class="text-sm text-gray-500 mb-1 uppercase tracking-wide">
                  <%= bio.get_localized_label(field.label) %>
                </div>
                <div class="text-gray-900 text-lg font-light">
                  <%= field.value %>
                </div>
                <div class="w-full h-px bg-gray-200 mt-4"></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="text-center mt-20 pt-8 border-t border-gray-200">
    <p class="text-gray-400 text-sm">Generated on <%= Date.current.strftime("%B %d, %Y") %></p>
  </div>
</div> 