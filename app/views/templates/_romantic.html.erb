<div class="romantic-template bg-gradient-to-br from-red-50 via-pink-50 to-red-100 p-8 max-w-4xl mx-auto rounded-3xl shadow-lg border-4 border-red-200">
  <!-- Header -->
  <div class="text-center mb-12 relative">
    <div class="bg-gradient-to-r from-red-400 to-pink-500 text-white px-10 py-6 rounded-full mb-6 shadow-lg">
      <h1 class="text-3xl font-serif">💕 Marriage Biodata 💕</h1>
    </div>
    <div class="flex justify-center space-x-4">
      <span class="text-red-400 text-2xl">💖</span>
      <span class="text-pink-400 text-2xl">💝</span>
      <span class="text-red-400 text-2xl">💖</span>
    </div>
  </div>

  <!-- Content -->
  <div class="space-y-8">
    <% bio.sections.ordered.each do |section| %>
      <div class="section bg-white/90 backdrop-blur-sm rounded-2xl p-6 border-2 border-red-200 shadow-md">
        <h2 class="text-xl font-serif text-red-800 mb-6 flex items-center">
          <span class="text-2xl mr-3">💝</span>
          <%= bio.get_localized_label(section.name) %>
        </h2>
        
        <div class="space-y-4">
          <% section.fields.ordered.each do |field| %>
            <% if field.value.present? %>
              <div class="field-item bg-gradient-to-r from-red-50 to-pink-50 rounded-xl p-4 border border-red-200">
                <div class="text-sm font-medium text-red-700 mb-2 flex items-center">
                  <span class="text-lg mr-2">💕</span>
                  <%= bio.get_localized_label(field.label) %>
                </div>
                <div class="text-red-900 font-medium pl-6">
                  <%= field.value %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="text-center mt-12 pt-6 border-t-2 border-red-200">
    <p class="text-red-600 text-sm font-medium">Generated on <%= Date.current.strftime("%B %d, %Y") %></p>
    <div class="flex justify-center space-x-2 mt-2">
      <span class="text-red-400">💖</span>
      <span class="text-pink-400">💝</span>
      <span class="text-red-400">💕</span>
    </div>
  </div>
</div> 