<div class="floral-template bg-gradient-to-br from-pink-50 via-rose-50 to-pink-100 p-8 max-w-4xl mx-auto rounded-3xl shadow-lg border-4 border-pink-200">
  <!-- Header -->
  <div class="text-center mb-12 relative">
    <div class="absolute inset-0 bg-gradient-to-r from-pink-200 to-rose-200 rounded-full opacity-20"></div>
    <div class="relative bg-gradient-to-r from-pink-400 to-rose-500 text-white px-10 py-6 rounded-full mb-6 shadow-lg">
      <h1 class="text-3xl font-serif">🌸 Marriage Biodata 🌸</h1>
    </div>
    <div class="flex justify-center space-x-2">
      <div class="w-3 h-3 bg-pink-400 rounded-full"></div>
      <div class="w-3 h-3 bg-rose-400 rounded-full"></div>
      <div class="w-3 h-3 bg-pink-400 rounded-full"></div>
    </div>
  </div>

  <!-- Content -->
  <div class="space-y-8">
    <% bio.sections.ordered.each do |section| %>
      <div class="section bg-white/80 backdrop-blur-sm rounded-2xl p-6 border-2 border-pink-200 shadow-md">
        <h2 class="text-xl font-serif text-pink-800 mb-6 flex items-center">
          <span class="text-2xl mr-3">🌺</span>
          <%= bio.get_localized_label(section.name) %>
        </h2>
        
        <div class="space-y-4">
          <% section.fields.ordered.each do |field| %>
            <% if field.value.present? %>
              <div class="field-item bg-gradient-to-r from-pink-50 to-rose-50 rounded-xl p-4 border border-pink-200">
                <div class="text-sm font-medium text-pink-700 mb-2 flex items-center">
                  <span class="text-lg mr-2">💐</span>
                  <%= bio.get_localized_label(field.label) %>
                </div>
                <div class="text-pink-900 font-medium pl-6">
                  <%= field.value %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="text-center mt-12 pt-6 border-t-2 border-pink-200">
    <p class="text-pink-600 text-sm font-medium">Generated on <%= Date.current.strftime("%B %d, %Y") %></p>
    <div class="flex justify-center space-x-1 mt-2">
      <span class="text-pink-400">🌸</span>
      <span class="text-rose-400">🌺</span>
      <span class="text-pink-400">💐</span>
    </div>
  </div>
</div> 