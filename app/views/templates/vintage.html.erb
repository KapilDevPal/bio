<div class="vintage-template bg-gradient-to-br from-amber-50 via-yellow-50 to-orange-50 p-8 max-w-4xl mx-auto rounded-2xl shadow-lg border-4 border-amber-200">
  <!-- Header -->
  <div class="text-center mb-12">
    <div class="bg-gradient-to-r from-amber-600 to-orange-600 text-white px-12 py-6 rounded-full mb-6 shadow-lg border-2 border-amber-400">
      <h1 class="text-4xl font-serif">Marriage Biodata</h1>
    </div>
    <div class="flex justify-center space-x-2">
      <div class="w-4 h-4 bg-amber-500 rounded-full"></div>
      <div class="w-4 h-4 bg-orange-500 rounded-full"></div>
      <div class="w-4 h-4 bg-amber-500 rounded-full"></div>
    </div>
  </div>

  <!-- Content -->
  <div class="space-y-10">
    <% bio.sections.ordered.each do |section| %>
      <div class="section bg-white/90 backdrop-blur-sm rounded-xl p-6 border-2 border-amber-200 shadow-md">
        <h2 class="text-2xl font-serif text-amber-800 mb-6 flex items-center">
          <div class="w-6 h-6 bg-gradient-to-r from-amber-500 to-orange-500 rounded-full mr-4"></div>
          <%= bio.get_localized_label(section.name) %>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% section.fields.ordered.each do |field| %>
            <% if field.value.present? %>
              <div class="field-item bg-gradient-to-r from-amber-50 to-orange-50 rounded-lg p-4 border border-amber-200">
                <div class="text-sm font-bold text-amber-700 mb-2 uppercase tracking-wide">
                  <%= bio.get_localized_label(field.label) %>
                </div>
                <div class="text-amber-900 font-medium">
                  <%= field.value %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="text-center mt-16 pt-8 border-t-2 border-amber-200">
    <p class="text-amber-600 text-sm font-medium">Generated on <%= Date.current.strftime("%B %d, %Y") %></p>
  </div>
</div> 