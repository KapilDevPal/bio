<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <!-- Simple Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-2 rounded-lg mr-3">
            <i class="fas fa-heart text-white text-xl"></i>
    </div>
          <h1 class="text-2xl font-bold text-gray-900">Edit Your Biodata</h1>
  </div>

  <!-- Language Selector -->
        <div class="flex items-center space-x-4">
        <label class="text-sm font-medium text-gray-700">Language:</label>
          <select data-bio-form-target="languageSelector" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="en" <%= 'selected' if @bio.language_code == 'en' %>>ЁЯЗ║ЁЯЗ╕ English</option>
            <option value="hi" <%= 'selected' if @bio.language_code == 'hi' %>>ЁЯЗоЁЯЗ│ рд╣рд┐рдВрджреА</option>
            <option value="pa" <%= 'selected' if @bio.language_code == 'pa' %>>ЁЯЗоЁЯЗ│ рикрй░риЬри╛римрйА</option>
            <option value="mr" <%= 'selected' if @bio.language_code == 'mr' %>>ЁЯЗоЁЯЗ│ рдорд░рд╛рдареА</option>
            <option value="te" <%= 'selected' if @bio.language_code == 'te' %>>ЁЯЗоЁЯЗ│ р░др▒Жр░▓р▒Бр░Чр▒Б</option>
            <option value="ta" <%= 'selected' if @bio.language_code == 'ta' %>>ЁЯЗоЁЯЗ│ родрооро┐ро┤рпН</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-8">
    <%= form_with model: @bio, url: update_bio_path(@bio.edit_token), 
                  data: { controller: "bio-form", 
                          bio_form_edit_token_value: @bio.edit_token,
                          bio_form_update_url_value: update_bio_path(@bio.edit_token),
                          bio_form_target: "form" } do |form| %>
    
      <%= form.hidden_field :template %>
      <%= form.hidden_field :language_code %>
      
      <!-- Template Selection Section -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <i class="fas fa-palette text-purple-500 mr-3"></i>
          Choose Your Template
        </h2>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          <% Bio.available_templates.each do |template| %>
            <div class="template-option cursor-pointer border-2 rounded-lg p-4 transition-all duration-200 hover:shadow-md <%= 'border-blue-500 bg-blue-50' if @bio.template == template[:id] %> <%= 'border-gray-200 hover:border-gray-300' if @bio.template != template[:id] %>"
                 data-template-id="<%= template[:id] %>"
                 data-action="click->bio-form#selectTemplate">
              <div class="flex items-center mb-2">
                <div class="w-4 h-4 rounded-full <%= template[:color] %> mr-3"></div>
                <h3 class="font-medium text-gray-900 text-sm"><%= template[:name] %></h3>
              </div>
              <p class="text-xs text-gray-600"><%= template[:description] %></p>
              <% if @bio.template == template[:id] %>
                <div class="mt-2 text-blue-600 text-xs font-medium">
                  <i class="fas fa-check mr-1"></i>Selected
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Form Section -->
        <div class="space-y-6">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-edit text-blue-500 mr-3"></i>
              Fill Your Details
            </h2>
            
            <!-- Language Selector -->
            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 mb-2">Language:</label>
              <select data-bio-form-target="languageSelector" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="en" <%= 'selected' if @bio.language_code == 'en' %>>ЁЯЗ║ЁЯЗ╕ English</option>
                <option value="hi" <%= 'selected' if @bio.language_code == 'hi' %>>ЁЯЗоЁЯЗ│ рд╣рд┐рдВрджреА</option>
                <option value="pa" <%= 'selected' if @bio.language_code == 'pa' %>>ЁЯЗоЁЯЗ│ рикрй░риЬри╛римрйА</option>
                <option value="mr" <%= 'selected' if @bio.language_code == 'mr' %>>ЁЯЗоЁЯЗ│ рдорд░рд╛рдареА</option>
                <option value="te" <%= 'selected' if @bio.language_code == 'te' %>>ЁЯЗоЁЯЗ│ р░др▒Жр░▓р▒Бр░Чр▒Б</option>
                <option value="ta" <%= 'selected' if @bio.language_code == 'ta' %>>ЁЯЗоЁЯЗ│ родрооро┐ро┤рпН</option>
              </select>
            </div>
            
            <!-- Sections -->
            <div id="sections-container" class="space-y-6">
              <% @bio.sections.ordered.each_with_index do |section, section_index| %>
                <%= form.fields_for :sections_attributes, section do |section_form| %>
                  <%= section_form.hidden_field :id %>
                  <%= section_form.hidden_field :name %>
                  <%= section_form.hidden_field :position %>
                  
                  <div class="section-container bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <div class="flex items-center justify-between mb-4">
                      <h3 class="text-lg font-medium text-gray-900">
                        <%= section.name %>
                      </h3>
                      <div class="flex space-x-2">
                        <button type="button" data-action="click->bio-form#addField" 
                                class="text-green-600 hover:text-green-800 p-1 rounded">
                          <i class="fas fa-plus text-sm"></i>
                        </button>
                      </div>
                    </div>
                    
                    <div class="fields-container space-y-3">
                      <% section.fields.ordered.each_with_index do |field, field_index| %>
                        <%= section_form.fields_for :fields_attributes, field do |field_form| %>
                          <%= field_form.hidden_field :id if field.persisted? %>
                          <%= field_form.hidden_field :position %>
                          
                          <div class="field-container flex items-start space-x-3 p-3 bg-white rounded-lg border border-gray-200">
                            <div class="flex-1">
                              <label class="block text-sm font-medium text-gray-700 mb-1">Field Name</label>
                              <%= field_form.text_field :label, 
                                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500",
                                  placeholder: "Enter field name",
                                  required: true %>
                            </div>
                            <div class="flex-1">
                              <label class="block text-sm font-medium text-gray-700 mb-1">Your Answer</label>
                              <%= field_form.text_area :value, rows: 2,
                                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none",
                                  placeholder: "Enter your details" %>
                            </div>
                            <button type="button" data-action="click->bio-form#removeField" 
                                    class="text-red-500 hover:text-red-700 p-1 rounded self-start mt-6">
                              <i class="fas fa-trash text-sm"></i>
                            </button>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            
            <!-- Add Section Button -->
            <div class="mt-6">
              <button type="button" data-action="click->bio-form#addSection" 
                      class="w-full py-3 px-4 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-blue-400 hover:text-blue-600 transition-colors">
                <i class="fas fa-plus mr-2"></i>
                Add New Section
              </button>
            </div>
          </div>
        </div>

        <!-- Template Preview Section -->
        <div class="space-y-6">
          <!-- Template Preview -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <i class="fas fa-eye text-green-500 mr-3"></i>
              Template Preview
            </h3>
            
            <div id="template-preview" data-bio-form-target="templatePreview" class="border border-gray-200 rounded-lg p-4 bg-gray-50 min-h-[400px]">
              <%= render "templates/#{@bio.template}", bio: @bio %>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <i class="fas fa-download text-green-500 mr-3"></i>
              Download & Share
            </h3>
            
            <div class="grid grid-cols-2 gap-3">
              <button type="button" data-action="click->bio-form#downloadPDF" 
                      class="flex items-center justify-center px-4 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg transition-colors">
                <i class="fas fa-file-pdf mr-2"></i>
                PDF
              </button>
              
              <button type="button" data-action="click->bio-form#downloadImage" 
                      class="flex items-center justify-center px-4 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors">
                <i class="fas fa-image mr-2"></i>
                Image
              </button>
              
              <button type="button" data-action="click->bio-form#showQRCode" 
                      class="flex items-center justify-center px-4 py-3 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition-colors">
                <i class="fas fa-qrcode mr-2"></i>
                QR Code
              </button>
              
              <button type="button" data-action="click->bio-form#copyShareLink" 
                      class="flex items-center justify-center px-4 py-3 bg-green-500 hover:bg-green-600 text-white rounded-lg transition-colors">
                <i class="fas fa-share mr-2"></i>
                Share Link
              </button>
            </div>
            
            <div class="mt-4">
              <button type="button" data-action="click->bio-form#resetForm" 
                      class="w-full px-4 py-3 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors">
                <i class="fas fa-undo mr-2"></i>
                Reset Form
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
