<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50">
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <div class="text-center mb-16">
    <div class="mb-8">
      <div class="relative inline-block mb-6">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-full blur-2xl opacity-30 animate-pulse"></div>
          <i class="fas fa-heart text-6xl text-indigo-500 relative z-10 animate-bounce"></i>
      </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-indigo-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">
          Create Your Marriage Biodata
        </span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Design a beautiful, professional marriage biodata in minutes. 
          <span class="text-indigo-600 font-semibold">Customize every detail</span> and download as PDF instantly.
      </p>
    </div>
    
    <!-- Features -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="group bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-indigo-100 hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-edit text-white text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Easy Customization</h3>
          <p class="text-gray-600 leading-relaxed">Add, remove, or modify fields to match your preferences with our intuitive interface</p>
      </div>
      
        <div class="group bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-indigo-100 hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
        <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-globe text-white text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Multiple Languages</h3>
        <p class="text-gray-600 leading-relaxed">Support for 6 languages: English, Hindi, Punjabi, Marathi, Telugu, and Tamil</p>
      </div>
      
        <div class="group bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-indigo-100 hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
        <div class="bg-gradient-to-br from-purple-500 to-purple-600 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-download text-white text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">PDF Download</h3>
        <p class="text-gray-600 leading-relaxed">Download your biodata as a beautifully formatted PDF with professional styling</p>
      </div>
    </div>
  </div>

  <!-- Create Form -->
    <div class="bg-white/80 backdrop-blur-md rounded-3xl shadow-2xl border border-indigo-100 p-10 max-w-2xl mx-auto">
    <div class="text-center mb-8">
        <h2 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">
        Start Creating Your Biodata
      </h2>
      <p class="text-gray-600">Choose your preferred language and begin your journey</p>
    </div>
    
    <%= form_with model: @bio, local: true, class: "space-y-8" do |form| %>
      <div class="max-w-md mx-auto">
        <label class="block text-lg font-semibold text-gray-700 mb-4 text-center">
            <i class="fas fa-language text-indigo-500 mr-3"></i>
          Select Language
        </label>
        <div class="relative">
          <%= form.select :language_code, 
              options_for_select([
                ['🇺🇸 English', 'en'],
                ['🇮🇳 हिंदी (Hindi)', 'hi'],
                ['🇮🇳 ਪੰਜਾਬੀ (Punjabi)', 'pa'],
                ['🇮🇳 मराठी (Marathi)', 'mr'],
                ['🇮🇳 తెలుగు (Telugu)', 'te'],
                ['🇮🇳 தமிழ் (Tamil)', 'ta']
              ], @bio.language_code),
              {},
                class: "w-full px-6 py-4 border-2 border-indigo-200 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-indigo-200 focus:border-indigo-500 text-lg font-medium bg-white/80 backdrop-blur-sm transition-all duration-300 hover:border-indigo-300" %>
          <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none">
              <i class="fas fa-chevron-down text-indigo-400"></i>
          </div>
        </div>
      </div>

      <div class="text-center pt-6">
        <%= form.submit "Create My Biodata", 
              class: "bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-bold py-4 px-12 rounded-2xl text-lg transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl" %>
      </div>
    <% end %>
  </div>

  <!-- How it works -->
  <div class="mt-20">
      <h3 class="text-3xl font-bold text-center mb-12">
        <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
        How It Works
      </span>
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="text-center group">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <span class="text-2xl font-bold text-indigo-600">1</span>
        </div>
        <h4 class="text-xl font-bold text-gray-900 mb-3">Choose Language</h4>
        <p class="text-gray-600 leading-relaxed">Select your preferred language for the biodata</p>
      </div>
      
      <div class="text-center group">
          <div class="bg-gradient-to-br from-purple-100 to-indigo-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <span class="text-2xl font-bold text-purple-600">2</span>
        </div>
        <h4 class="text-xl font-bold text-gray-900 mb-3">Fill Details</h4>
        <p class="text-gray-600 leading-relaxed">Enter your personal, family, and contact information</p>
      </div>
      
      <div class="text-center group">
          <div class="bg-gradient-to-br from-indigo-100 to-blue-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <span class="text-2xl font-bold text-indigo-600">3</span>
        </div>
        <h4 class="text-xl font-bold text-gray-900 mb-3">Customize</h4>
        <p class="text-gray-600 leading-relaxed">Add or remove fields to match your requirements</p>
      </div>
      
      <div class="text-center group">
          <div class="bg-gradient-to-br from-blue-100 to-indigo-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <span class="text-2xl font-bold text-blue-600">4</span>
        </div>
        <h4 class="text-xl font-bold text-gray-900 mb-3">Download</h4>
        <p class="text-gray-600 leading-relaxed">Download your biodata as PDF and share with family</p>
      </div>
    </div>
  </div>

  <!-- Additional Features -->
    <div class="mt-20 bg-white/60 backdrop-blur-sm rounded-3xl p-10 shadow-xl border border-indigo-100">
      <h3 class="text-3xl font-bold text-center mb-8">
        <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
        Why Choose Our Generator?
      </span>
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="flex items-start space-x-4">
          <div class="bg-gradient-to-br from-emerald-500 to-teal-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-shield-alt text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">100% Secure</h4>
          <p class="text-gray-600 text-sm">Your data is safe and private, no registration required</p>
        </div>
      </div>
      
      <div class="flex items-start space-x-4">
          <div class="bg-gradient-to-br from-indigo-500 to-purple-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-mobile-alt text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">Mobile Friendly</h4>
          <p class="text-gray-600 text-sm">Works perfectly on all devices - mobile, tablet, desktop</p>
        </div>
      </div>
      
      <div class="flex items-start space-x-4">
          <div class="bg-gradient-to-br from-purple-500 to-indigo-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-bolt text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">Lightning Fast</h4>
          <p class="text-gray-600 text-sm">Create your biodata in minutes, not hours</p>
        </div>
      </div>
      
      <div class="flex items-start space-x-4">
        <div class="bg-gradient-to-br from-orange-500 to-red-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-palette text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">Beautiful Design</h4>
          <p class="text-gray-600 text-sm">Professional templates with modern styling</p>
        </div>
      </div>
      
      <div class="flex items-start space-x-4">
        <div class="bg-gradient-to-br from-teal-500 to-cyan-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-qrcode text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">QR Code Access</h4>
          <p class="text-gray-600 text-sm">Easy editing access with QR codes</p>
        </div>
      </div>
      
      <div class="flex items-start space-x-4">
          <div class="bg-gradient-to-br from-indigo-500 to-purple-500 w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0">
          <i class="fas fa-heart text-white"></i>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">Made with Love</h4>
          <p class="text-gray-600 text-sm">Crafted specifically for your special moments</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
