<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <div class="text-center mb-12">
    <div class="mb-6">
      <i class="fas fa-heart text-pink-500 text-6xl mb-4"></i>
      <h1 class="text-4xl font-bold text-gray-900 mb-4 font-playfair">
        Create Your Marriage Biodata
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Design a beautiful, professional marriage biodata in minutes. 
        Customize every detail and download as PDF instantly.
      </p>
    </div>
    
    <!-- Features -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-edit text-blue-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">Easy Customization</h3>
        <p class="text-gray-600 text-sm">Add, remove, or modify fields to match your preferences</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-globe text-green-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">Multiple Languages</h3>
        <p class="text-gray-600 text-sm">Support for English, Hindi, Punjabi, Marathi, Telugu, Tamil</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-download text-purple-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">PDF Download</h3>
        <p class="text-gray-600 text-sm">Download your biodata as a beautifully formatted PDF</p>
      </div>
    </div>
  </div>

  <!-- Create Form -->
  <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center font-playfair">
      Start Creating Your Biodata
    </h2>
    
    <%= form_with model: @bio, local: true, class: "space-y-6" do |form| %>
      <div class="max-w-md mx-auto">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-language mr-2"></i>
          Select Language
        </label>
        <%= form.select :language_code, 
            options_for_select([
              ['English', 'en'],
              ['हिंदी (Hindi)', 'hi'],
              ['ਪੰਜਾਬੀ (Punjabi)', 'pa'],
              ['मराठी (Marathi)', 'mr'],
              ['తెలుగు (Telugu)', 'te'],
              ['தமிழ் (Tamil)', 'ta']
            ], @bio.language_code),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
      </div>

      <div class="text-center pt-4">
        <%= form.submit "Create My Biodata", 
            class: "bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 transform hover:scale-105 shadow-lg" %>
      </div>
    <% end %>
  </div>

  <!-- How it works -->
  <div class="mt-12">
    <h3 class="text-2xl font-semibold text-gray-900 mb-6 text-center font-playfair">
      How It Works
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">1</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Choose Language</h4>
        <p class="text-gray-600 text-sm">Select your preferred language for the biodata</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">2</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Fill Details</h4>
        <p class="text-gray-600 text-sm">Enter your personal, family, and contact information</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">3</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Customize</h4>
        <p class="text-gray-600 text-sm">Add or remove fields to match your requirements</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">4</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Download</h4>
        <p class="text-gray-600 text-sm">Download your biodata as PDF and share with family</p>
      </div>
    </div>
  </div>
</div>
