<div class="bg-white rounded-lg p-6 shadow-sm">
  <!-- Header -->
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Marriage Biodata</h1>
    <div class="w-16 h-1 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto rounded-full"></div>
  </div>

  <!-- Sections -->
  <% bio.sections.ordered.each do |section| %>
    <% if section.fields.any? { |f| f.value.present? } %>
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
        <i class="fas fa-folder text-blue-500 mr-2"></i>
        <%= section.name %>
      </h2>
      
        <div class="grid gap-3">
        <% section.fields.ordered.each do |field| %>
            <% if field.value.present? %>
              <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
              <div class="text-sm font-medium text-gray-600 mb-1">
                  <%= bio.get_localized_label(field.label) %>:
              </div>
              <div class="text-gray-900 font-medium">
                <%= field.value %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
        </div>
      <% end %>
  <% end %>

  <!-- Empty State -->
  <% if bio.sections.all? { |s| s.fields.none? { |f| f.value.present? } } %>
    <div class="text-center py-8">
      <i class="fas fa-edit text-gray-400 text-4xl mb-4"></i>
      <p class="text-gray-500 text-lg">Start filling your details to see the preview here</p>
    </div>
  <% end %>
</div>