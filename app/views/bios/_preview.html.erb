<div class="biodata-preview bg-white border border-gray-200 rounded-lg p-8 max-w-2xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-8 border-b-2 border-pink-200 pb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2 font-playfair">
      <i class="fas fa-heart text-pink-500 mr-2"></i>
      Marriage Biodata
    </h1>
    <p class="text-gray-600">शादी का बायोडाटा / ਵਿਆਹ ਦਾ ਬਾਇਓਡਾਟਾ / लग्नाचा बायोडाटा</p>
  </div>

  <!-- Sections -->
  <% bio.sections.ordered.each do |section| %>
    <div class="section mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200 font-playfair">
        <i class="fas fa-folder text-blue-500 mr-2"></i>
        <%= section.name %>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% section.fields.ordered.each do |field| %>
          <% if field.label.present? && field.value.present? %>
            <div class="field">
              <div class="text-sm font-medium text-gray-600 mb-1">
                <%= field.label %>:
              </div>
              <div class="text-gray-900 font-medium">
                <%= field.value %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Empty state for section -->
      <% if section.fields.ordered.none? { |f| f.label.present? && f.value.present? } %>
        <div class="text-gray-500 text-center py-4 italic">
          <i class="fas fa-info-circle mr-2"></i>
          No information added yet
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="text-center mt-8 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-600">
      Generated on <%= Date.current.strftime("%B %d, %Y") %> | 
      <i class="fas fa-heart text-pink-500"></i> 
      Marriage Biodata Generator
    </p>
  </div>
</div>

<style>
  .biodata-preview {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
  
  .section h2 {
    color: #374151;
    position: relative;
  }
  
  .section h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 50px;
    height: 2px;
    background: linear-gradient(90deg, #ec4899, #f472b6);
  }
  
  .field {
    background: #f9fafb;
    padding: 12px;
    border-radius: 8px;
    border-left: 3px solid #ec4899;
  }
  
  .field:hover {
    background: #f3f4f6;
    transition: background-color 0.2s ease;
  }
</style> 