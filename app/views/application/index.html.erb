<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <div class="text-center mb-12">
    <div class="mb-6">
      <i class="fas fa-heart text-pink-500 text-6xl mb-4"></i>
      <h1 class="text-4xl font-bold text-gray-900 mb-4 font-playfair">
        Create Your Marriage Biodata
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Design a beautiful, professional marriage biodata in minutes. 
        Customize every detail and download as PDF instantly.
      </p>
    </div>
    
    <!-- Features -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-edit text-blue-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">Easy Customization</h3>
        <p class="text-gray-600 text-sm">Add, remove, or modify fields to match your preferences</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-palette text-green-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">Multiple Templates</h3>
        <p class="text-gray-600 text-sm">Choose from 6 beautiful templates to match your style</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-download text-purple-500 text-3xl mb-3"></i>
        <h3 class="font-semibold text-gray-900 mb-2">PDF & PNG Export</h3>
        <p class="text-gray-600 text-sm">Download your biodata as PDF or high-quality PNG image</p>
      </div>
    </div>
  </div>

  <!-- Start Creating Button -->
  <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center font-playfair">
      Start Creating Your Biodata
    </h2>
    
    <div class="text-center">
      <%= link_to "Create My Biodata", data_entry_path, 
          class: "bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 transform hover:scale-105 shadow-lg inline-block" %>
    </div>
  </div>

  <!-- How it works -->
  <div class="mt-12">
    <h3 class="text-2xl font-semibold text-gray-900 mb-6 text-center font-playfair">
      How It Works
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">1</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Fill Details</h4>
        <p class="text-gray-600 text-sm">Enter your personal, family, and contact information</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">2</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Choose Template</h4>
        <p class="text-gray-600 text-sm">Select from 6 beautiful templates to match your style</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">3</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Preview</h4>
        <p class="text-gray-600 text-sm">See how your biodata looks with the selected template</p>
      </div>
      <div class="text-center">
        <div class="bg-pink-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-pink-600 font-bold">4</span>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2">Download</h4>
        <p class="text-gray-600 text-sm">Download your biodata as PDF or PNG and share with family</p>
      </div>
    </div>
  </div>
</div> 