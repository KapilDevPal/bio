<div class="min-h-screen bg-gray-50 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-4xl font-bold text-gray-900 mb-2 sm:mb-4">Choose Your Template</h1>
      <p class="text-sm sm:text-lg text-gray-600">Select a beautiful template for your biodata. You can preview each one before making your choice.</p>
    </div>

    <!-- Template Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-8">
      <!-- Classic Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-blue-500 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-file-alt text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Classic</h3>
            <p class="text-sm text-gray-600 mb-4">Traditional and professional design with clean layout</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Clean typography</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Professional layout</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Easy to read</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Classic", preview_path(template: 'classic'), 
              class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>

      <!-- Modern Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-gray-800 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-star text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Modern</h3>
            <p class="text-sm text-gray-600 mb-4">Contemporary design with bold colors and modern styling</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Bold design</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Contemporary style</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Eye-catching layout</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Modern", preview_path(template: 'modern'), 
              class: "w-full bg-gray-800 hover:bg-gray-900 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>

      <!-- Elegant Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-crown text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Elegant</h3>
            <p class="text-sm text-gray-600 mb-4">Sophisticated design with gradient colors and premium feel</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Gradient design</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Premium styling</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Sophisticated layout</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Elegant", preview_path(template: 'elegant'), 
              class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>

      <!-- Minimal Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-green-500 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-leaf text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Minimal</h3>
            <p class="text-sm text-gray-600 mb-4">Simple and clean design focusing on content</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Clean design</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Minimal styling</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Content-focused</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Minimal", preview_path(template: 'minimal'), 
              class: "w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>

      <!-- Professional Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-teal-500 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-briefcase text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Professional</h3>
            <p class="text-sm text-gray-600 mb-4">Business-oriented design perfect for corporate settings</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Business style</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Corporate layout</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Formal appearance</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Professional", preview_path(template: 'professional'), 
              class: "w-full bg-teal-500 hover:bg-teal-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>

      <!-- Creative Template -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="p-4 sm:p-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-red-500 rounded-lg mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-palette text-white text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Creative</h3>
            <p class="text-sm text-gray-600 mb-4">Colorful and artistic design for creative personalities</p>
          </div>
          <div class="space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Colorful design</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Artistic layout</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <i class="fas fa-check text-green-500 mr-2"></i>
              <span>Creative styling</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 sm:px-6 py-3">
          <%= link_to "Select Creative", preview_path(template: 'creative'), 
              class: "w-full bg-gradient-to-r from-orange-400 to-red-500 hover:from-orange-500 hover:to-red-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
        </div>
      </div>
    </div>

    <!-- Back Button -->
    <div class="text-center">
      <%= link_to "â† Back to Data Entry", data_entry_path, 
