<div class="biodata-preview template-<%= @selected_template %>">
  <!-- Header -->
  <div class="text-center mb-8">
    <% if @biodata["photo"].present? %>
      <div class="mb-6">
        <img src="<%= @biodata["photo"] %>" class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-white shadow-lg" alt="Profile Photo">
      </div>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Biodata</h1>
    <div class="w-20 h-1 bg-blue-600 mx-auto"></div>
  </div>

  <!-- Personal Information -->
  <% if @biodata["personal"].present? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-blue-600 mb-4 border-b border-blue-200 pb-2">Personal Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @biodata["personal"].each do |key, value| %>
          <% if value.present? %>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="text-sm font-bold text-blue-600 mb-1 uppercase tracking-wide"><%= key.titleize %></div>
              <div class="text-gray-800"><%= value %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Family Information -->
  <% if @biodata["family"].present? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-blue-600 mb-4 border-b border-blue-200 pb-2">Family Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @biodata["family"].each do |key, value| %>
          <% if value.present? %>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="text-sm font-bold text-blue-600 mb-1 uppercase tracking-wide"><%= key.titleize %></div>
              <div class="text-gray-800"><%= value %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Contact Information -->
  <% if @biodata["contact"].present? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-blue-600 mb-4 border-b border-blue-200 pb-2">Contact Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @biodata["contact"].each do |key, value| %>
          <% if value.present? %>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="text-sm font-bold text-blue-600 mb-1 uppercase tracking-wide"><%= key.titleize %></div>
              <div class="text-gray-800"><%= value %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Partner Preferences -->
  <% if @biodata["preferences"].present? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-blue-600 mb-4 border-b border-blue-200 pb-2">Partner Preferences</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @biodata["preferences"].each do |key, value| %>
          <% if value.present? %>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="text-sm font-bold text-blue-600 mb-1 uppercase tracking-wide"><%= key.titleize %></div>
              <div class="text-gray-800"><%= value %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="text-center mt-8 pt-6 border-t-2 border-blue-600">
    <p class="text-gray-600 text-sm">Generated on <%= Date.current.strftime("%B %d, %Y") %></p>
  </div>
</div>

