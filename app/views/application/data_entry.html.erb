<div class="min-h-screen bg-gray-50 py-4 sm:py-8" data-controller="biodata-entry">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-4xl font-bold text-gray-900 mb-2 sm:mb-4">Fill Your Biodata Details</h1>
      <p class="text-sm sm:text-lg text-gray-600">Enter your information below. You'll be able to choose a template and preview later.</p>
    </div>

    <%= form_with url: save_data_path, method: :post, local: true, data: { controller: "biodata-entry" } do |form| %>
      <div class="space-y-4 sm:space-y-6">
        <!-- Photo Upload Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <h2 class="text-lg sm:text-xl font-semibold text-gray-900 mb-4 sm:mb-6">Profile Photo</h2>
          <div class="flex items-center space-x-3 sm:space-x-4">
            <div data-biodata-entry-target="photoPreview" class="w-16 h-16 sm:w-20 sm:h-20 bg-gray-200 rounded-full flex items-center justify-center overflow-hidden">
              <i class="fas fa-user text-gray-400 text-lg sm:text-2xl"></i>
            </div>
            <div class="flex-1">
              <input type="file" data-biodata-entry-target="photoInput" data-action="change->biodata-entry#handlePhotoUpload" 
                     accept="image/*" class="hidden">
              <button type="button" data-action="click->biodata-entry#triggerPhotoUpload" 
                      class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-2 sm:px-4 sm:py-2 rounded-lg transition-colors text-sm sm:text-base">
                <i class="fas fa-camera mr-1 sm:mr-2"></i>Upload Photo
              </button>
              <p class="text-xs sm:text-sm text-gray-600 mt-1">JPG, PNG up to 5MB</p>
              <input type="hidden" name="biodata[photo]" data-biodata-entry-target="photoData">
            </div>
          </div>
        </div>

        <!-- Personal Information Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Personal Information</h2>
            <button type="button" data-action="click->biodata-entry#addField" data-section="personal"
                    class="text-green-600 hover:text-green-800 p-1 sm:p-2 rounded transition-colors">
              <i class="fas fa-plus text-xs sm:text-sm"></i>
            </button>
          </div>
          
          <div data-biodata-entry-target="personalFields" class="space-y-3">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input type="text" name="biodata[personal][full_name]" placeholder="Enter your full name"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Date of Birth</label>
                <input type="date" name="biodata[personal][date_of_birth]"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Age</label>
                <input type="number" name="biodata[personal][age]" placeholder="Enter your age"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Height</label>
                <input type="text" name="biodata[personal][height]" placeholder="e.g., 5'8\" or 172 cm"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Education</label>
                <input type="text" name="biodata[personal][education]" placeholder="e.g., Bachelor's in Engineering"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Occupation</label>
                <input type="text" name="biodata[personal][occupation]" placeholder="e.g., Software Engineer"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Religion</label>
                <input type="text" name="biodata[personal][religion]" placeholder="Enter your religion"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Caste</label>
                <input type="text" name="biodata[personal][caste]" placeholder="Enter your caste (optional)"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div>
              <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Marital Status</label>
              <select name="biodata[personal][marital_status]" 
                      class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Select marital status</option>
                <option value="Never Married">Never Married</option>
                <option value="Divorced">Divorced</option>
                <option value="Widowed">Widowed</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Family Information Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Family Information</h2>
            <button type="button" data-action="click->biodata-entry#addField" data-section="family"
                    class="text-green-600 hover:text-green-800 p-1 sm:p-2 rounded transition-colors">
              <i class="fas fa-plus text-xs sm:text-sm"></i>
            </button>
          </div>
          
          <div data-biodata-entry-target="familyFields" class="space-y-3">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Father's Name</label>
                <input type="text" name="biodata[family][father_name]" placeholder="Enter father's name"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Mother's Name</label>
                <input type="text" name="biodata[family][mother_name]" placeholder="Enter mother's name"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Family Type</label>
                <select name="biodata[family][family_type]" 
                        class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="">Select family type</option>
                  <option value="Joint Family">Joint Family</option>
                  <option value="Nuclear Family">Nuclear Family</option>
                </select>
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Family Income</label>
                <input type="text" name="biodata[family][family_income]" placeholder="e.g., 10-15 LPA"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Native Place</label>
                <input type="text" name="biodata[family][native_place]" placeholder="Enter native place"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Siblings</label>
                <input type="text" name="biodata[family][siblings]" placeholder="e.g., 1 brother, 2 sisters"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Information Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Contact Information</h2>
            <button type="button" data-action="click->biodata-entry#addField" data-section="contact"
                    class="text-green-600 hover:text-green-800 p-1 sm:p-2 rounded transition-colors">
              <i class="fas fa-plus text-xs sm:text-sm"></i>
            </button>
          </div>
          
          <div data-biodata-entry-target="contactFields" class="space-y-3">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input type="tel" name="biodata[contact][phone]" placeholder="Enter your phone number"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" name="biodata[contact][email]" placeholder="Enter your email"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div>
              <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Address</label>
              <textarea name="biodata[contact][address]" rows="3" placeholder="Enter your complete address"
                        class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">City</label>
                <input type="text" name="biodata[contact][city]" placeholder="Enter your city"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">State</label>
                <input type="text" name="biodata[contact][state]" placeholder="Enter your state"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
          </div>
        </div>

        <!-- Preferences Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Partner Preferences</h2>
            <button type="button" data-action="click->biodata-entry#addField" data-section="preferences"
                    class="text-green-600 hover:text-green-800 p-1 sm:p-2 rounded transition-colors">
              <i class="fas fa-plus text-xs sm:text-sm"></i>
            </button>
          </div>
          
          <div data-biodata-entry-target="preferencesFields" class="space-y-3">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Preferred Age Range</label>
                <input type="text" name="biodata[preferences][age_range]" placeholder="e.g., 25-30 years"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Preferred Education</label>
                <input type="text" name="biodata[preferences][education]" placeholder="e.g., Graduate or above"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Preferred Occupation</label>
                <input type="text" name="biodata[preferences][occupation]" placeholder="e.g., Any professional"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Preferred Location</label>
                <input type="text" name="biodata[preferences][location]" placeholder="e.g., Same city or nearby"
                       class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
            <div>
              <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Other Preferences</label>
              <textarea name="biodata[preferences][other]" rows="3" placeholder="Any other preferences or requirements"
                        class="w-full px-2 sm:px-3 py-2 border border-gray-300 rounded-lg text-xs sm:text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
          <div class="text-center">
            <%= form.submit "Save & Continue to Template Selection", 
                class: "bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 transform hover:scale-105 shadow-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 