<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Your Biodata Preview</h1>
      <p class="text-gray-600">Review your biodata and export it in your preferred format</p>
    </div>

    <!-- Template Selection -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Template Selection</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <% ['classic', 'modern', 'elegant', 'minimal', 'professional', 'creative'].each do |template| %>
          <%= link_to preview_path(template: template), 
              class: "block p-4 border-2 rounded-lg text-center transition-colors #{@selected_template == template ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-gray-300'}" do %>
            <div class="text-sm font-medium text-gray-900 capitalize"><%= template %></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Export Options -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Export Options</h2>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to export_pdf_path(template: @selected_template), 
            class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors text-center" do %>
          <i class="fas fa-file-pdf mr-2"></i>
          Export as PDF
        <% end %>
        
        <%= link_to export_image_path(template: @selected_template), 
            class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors text-center",
            target: "_blank" do %>
          <i class="fas fa-image mr-2"></i>
          Export as Image
        <% end %>
      </div>
    </div>

    <!-- Preview -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Preview - <%= @selected_template.titleize %> Template</h2>
      <div class="border border-gray-200 rounded-lg overflow-hidden">
        <div id="biodata-preview" class="p-8">
          <!-- Preview content will be rendered here -->
          <%= render 'preview_content' %>
        </div>
      </div>
    </div>

    <!-- Back to Template Selection -->
    <div class="text-center mt-8">
      <%= link_to template_selection_path, 
          class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Template Selection
      <% end %>
    </div>
  </div>
</div>

<!-- Hidden data for JavaScript -->
<div id="biodata-data" style="display: none;"><%= @biodata.to_json %></div>
<div id="selected-template" style="display: none;"><%= @selected_template %></div> 