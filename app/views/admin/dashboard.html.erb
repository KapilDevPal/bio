<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Marriage Biodata</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100">
  <div class="min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
          <div class="flex items-center space-x-4">
            <span class="text-gray-600">Welcome, <%= current_user.email %></span>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        </div>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex space-x-8 py-4">
          <%= link_to "Dashboard", admin_dashboard_path, class: "text-blue-600 border-b-2 border-blue-600 pb-2 px-1 text-sm font-medium" %>
          <%= link_to "Biodata", admin_biodata_path, class: "text-gray-500 hover:text-gray-700 px-1 text-sm font-medium" %>
          <%= link_to "Visits", admin_visits_path, class: "text-gray-500 hover:text-gray-700 px-1 text-sm font-medium" %>
          <%= link_to "Main Site", root_path, class: "text-gray-500 hover:text-gray-700 px-1 text-sm font-medium" %>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <!-- Statistics Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <i class="fas fa-file-alt text-3xl text-blue-500"></i>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Biodata</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @total_biodata %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <i class="fas fa-eye text-3xl text-green-500"></i>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Visits</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @total_visits %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <i class="fas fa-calendar-day text-3xl text-yellow-500"></i>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Visits Today</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @visits_today %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <i class="fas fa-calendar-week text-3xl text-purple-500"></i>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Visits This Week</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @visits_this_week %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Data -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Biodata -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Biodata</h3>
            <div class="space-y-3">
              <% @recent_biodata.each do |biodatum| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900"><%= biodatum.name %></h4>
                    <p class="text-sm text-gray-500">Created <%= time_ago_in_words(biodatum.created_at) %> ago</p>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                      <%= biodatum.biodata_sections.count %> sections
                    </span>
                    <%= link_to "View", biodatum_path(biodatum), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
            <%= link_to "View All Biodata", admin_biodata_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
          </div>
        </div>

        <!-- Recent Visits -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Visits</h3>
            <div class="space-y-3">
              <% @recent_visits.each do |visit| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900"><%= visit.biodatum&.name || "Unknown" %></h4>
                    <p class="text-sm text-gray-500"><%= visit.ip_address %> â€¢ <%= time_ago_in_words(visit.visited_at) %> ago</p>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= visit.visited_at.strftime("%H:%M") %>
                  </div>
                </div>
              <% end %>
            </div>
            <%= link_to "View All Visits", admin_visits_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200" %>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html> 